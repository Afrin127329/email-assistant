{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "Email Assistant",
  "description": "An AI extension to assist in writing proper emails",
  "browser_action": {
    "default_popup": "/src/pages/Popup/index.html",
    "default_icon": "/src/assets/img/icon-34.png"
  },
  "icons": {
    "128": "/src/assets/img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["/src/pages/Content/index.js"],
      "css": ["/src/pages/Content/content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    "/src/pages/Content/content.styles.css",
    "/src/assets/img/icon-128.png"
  ],
  "permissions": ["storage"]
}
